{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",  // Define a pasta de saída para os arquivos compilados
    "rootDir": "./src",  // Define a pasta de origem do código fonte
    "strict": true  
  },
  
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
